<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="1dp"
    card_view:cardElevation="5dp"
    card_view:cardMaxElevation="2dp"
    card_view:contentPadding="3dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#B0E0E6"
        android:padding="10dp">

        <TextView
            android:id="@+id/name_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Driver name: "
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp"
            android:layout_toEndOf="@+id/name_tag"
            android:layout_toRightOf="@+id/name_tag"
            android:gravity="center"
            android:text="John doe"
            android:textColor="#000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/phone_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/name_tag"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Mobile: "
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@+id/phone_tag"
            android:layout_toRightOf="@+id/phone_tag"
            android:gravity="center"
            android:text="mobile"
            android:textColor="#000"
            android:textSize="15dp" />


        <TextView
            android:id="@+id/nid_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/phone_tag"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:text="NID: "
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_nid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_mobile"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@+id/nid_tag"
            android:layout_toRightOf="@+id/nid_tag"
            android:gravity="center"
            android:text="nid"
            android:textColor="#000"
            android:textSize="15dp" />


        <TextView
            android:id="@+id/reg_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/nid_tag"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:text="Vehicle registration: "
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_nid"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@+id/reg_tag"
            android:layout_toRightOf="@+id/reg_tag"
            android:gravity="center"
            android:text="reg"
            android:textColor="#000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/type_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/reg_tag"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:text="vehicle type: "
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_reg"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@+id/type_tag"
            android:layout_toRightOf="@+id/type_tag"
            android:gravity="center"
            android:text="type"
            android:textColor="#000"
            android:textSize="15dp" />



        <RatingBar
            android:id="@+id/rtbar_driver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/type_tag"
            android:clickable="false"
            android:focusable="false"
            android:isIndicator="true" />

    </RelativeLayout>

</android.support.v7.widget.CardView>